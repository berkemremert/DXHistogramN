<Window x:Class="DXHistogramN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxcore="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:local="clr-namespace:DXHistogramN.Converters"
        
        Title="DX Histogram Analyzer - Multi-Chart with Individual Data Editing" 
        Height="900" Width="1400"
        WindowState="Maximized"
        x:Name="MainWindowRoot">

    <Window.Resources>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <Style x:Key="HistogramTabStyle" TargetType="TabItem">
            <Setter Property="Header" Value="{Binding Name}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="ActiveHistogramStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="BorderBrush" Value="DodgerBlue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <ToolBar Grid.Row="0" Height="40">
            <Button Content="Open Designer" Command="{Binding OpenDesignerCommand}"
                    Background="LightBlue" Padding="10,2"/>
            <Separator/>
            <Button Content="Save Layout" Command="{Binding SaveLayoutCommand}"
                    Background="LightGreen" Padding="10,2"/>
            <Button Content="Load Layout" Command="{Binding LoadLayoutCommand}"
                    Background="LightYellow" Padding="10,2"/>
            <Separator/>
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" 
                       Margin="10,0" 
                       FontWeight="Bold"/>
        </ToolBar>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="600"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400" MinWidth="350"/>
            </Grid.ColumnDefinitions>

            <!-- Chart Area -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <dxc:ChartControl x:Name="unifiedChartControl"
                                CrosshairEnabled="True"
                                MouseDoubleClick="ChartControl_MouseDoubleClick">
                </dxc:ChartControl>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"
                         Background="Gray" 
                         ShowsPreview="True"/>

            <!-- Data Editing Panel -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <!-- Dynamic Tab Control -->
                    <!-- Histogram List & Settings -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- Settings -->
                            <RowDefinition Height="*"/>
                            <!-- Histogram list -->
                        </Grid.RowDefinitions>

                        <!-- Settings for the selected histogram -->
                        <ScrollViewer Grid.Row="0" Margin="5" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <GroupBox Header="Histogram Settings" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Bin Count -->
                                        <TextBlock Text="Bin Count:" Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,5"/>
                                        <dxe:SpinEdit Grid.Row="0" Grid.Column="1"
                                  EditValue="{Binding SelectedHistogram.BinCount, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                  IsFloatValue="False"
                                  MinValue="1" MaxValue="100"
                                  Margin="0,0,5,5"/>
                                        <Button Grid.Row="0" Grid.Column="2" Content="Apply"
                            Command="{Binding ApplyRangeForHistogramCommand}"
                            CommandParameter="{Binding SelectedHistogram}"
                            Padding="8,2" Margin="0,0,0,5"
                            Background="LightBlue"/>

                                        <!-- Min Value -->
                                        <TextBlock Text="Min Value:" Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,5"/>
                                        <dxe:TextEdit Grid.Row="1" Grid.Column="1"
                                  Text="{Binding SelectedHistogram.MinValue, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,5,5"/>

                                        <!-- Max Value -->
                                        <TextBlock Text="Max Value:" Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,5"/>
                                        <dxe:TextEdit Grid.Row="2" Grid.Column="1"
                                  Text="{Binding SelectedHistogram.MaxValue, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,5,5"/>

                                        <!-- Reset Button -->
                                        <Button Grid.Row="3" Grid.Column="1" Content="Reset Range"
                            Command="{Binding ResetRangeForHistogramCommand}"
                            CommandParameter="{Binding SelectedHistogram}"
                            HorizontalAlignment="Left"
                            Padding="10,2" Margin="0,5,0,0"
                            Background="LightCoral"/>
                                    </Grid>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Histogram List -->
                        <ListBox Grid.Row="1"
             ItemsSource="{Binding Histograms}"
             SelectedItem="{Binding SelectedHistogram, Mode=TwoWay}"
             DisplayMemberPath="Name"
             BorderBrush="Gray" BorderThickness="1" Margin="5">
                            <ListBox.ContextMenu>
                                <ContextMenu DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                    <MenuItem Header="Add Histogram" Command="{Binding AddHistogramCommand}"/>
                                    <MenuItem Header="Remove Histogram" Command="{Binding RemoveHistogramCommand}" CommandParameter="{Binding SelectedHistogram}"/>
                                    <MenuItem Header="Rename" Command="{Binding RenameHistogramCommand}" CommandParameter="{Binding SelectedHistogram}"/>
                                </ContextMenu>
                            </ListBox.ContextMenu>
                        </ListBox>
                    </Grid>


                    <!-- Empty State Message -->
                    <TextBlock Grid.Row="1" 
                   Text="Click '+ Add Histogram' to create your first histogram"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Foreground="Gray"
                   Visibility="{Binding Histograms.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>